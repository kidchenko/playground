@page "/"
@inject NotebookService content
@inject NavigationManager navigation

<div class="page">
    <MainToolbar />
    
    <div class="info">
        <h1>Welcome!</h1>
        <p>To get started, create a new notebook or <a href="notebooks">see your existing notebooks.</a></p>

        <button @onclick="CreateNewNotebook">Create a new notebook â–¸</button>
    </div>
</div>

@code {
    private async Task CreateNewNotebook()
    {
        var newNotebook = await content.CreateNewNotebook(addSample: true);
        navigation.NavigateTo($"/notebook/{newNotebook.NotebookId}");
    }
}
